<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/authenticationFragment">

    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.example.marketing.auth.fragments.AuthFragment"
        android:label="@null"
        tools:layout="@layout/fragment_autintification">
        <action
            android:id="@+id/sign_in"
            app:destination="@id/signInFragment"/>
        <action
            android:id="@+id/sign_up"
            app:destination="@id/signUpFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.marketing.auth.fragments.SignInFragment"
        android:label="@null"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/main"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true"
            app:popUpTo="@id/mainActivity"
            app:popUpToInclusive="true"/>
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="false"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.marketing.auth.fragments.SignUpFragment"
        android:label="@null"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/main"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true"
            app:popUpTo="@id/mainActivity"
            app:popUpToInclusive="true"/>
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="false"/>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.marketing.MainActivity"
        android:label="@null"
        tools:layout="@layout/activity_main">
        <argument
            android:name="permission"
            app:argType="string"
            app:nullable="false"/>
    </activity>
</navigation>